<%- include('./adminlayout/header.ejs'); %> 
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4"> 
                <h2>Post</h2> 
                <a href="/addPost" class="btn btn-primary">Add Post</a>
                <div class="table-responsive">
                  <table class="table table-striped table-sm">
                    <thead>
                      <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>About</th>
                        <th>Photo</th>
                        <th>Action</th> 
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0; i< users.length; i++) { %>
                      <tr>
                        <td><%= users[i].id %></td>
                        <td><%= users[i].title %></td>
                        <td><%= users[i].about %></td>
                        

                        
                        <td>
                          <img src="/images/<%= users[i].picture %>" width="100px" height="100px"/></td>
                        <td>
                          <a href="/editPost/<%= users[i].id %>" class="btn btn-primary">Edit</a>
                          <a href="/deletePost/<%= users[i].id %>" class="btn btn-danger">Delete</a>
                        </td>
                      </tr>
                      <% } %>
                
                    </tbody>
                  </table>
                </div>
              </main>
            </div>
          </div>
      

            <%- include('./adminlayout/footer.ejs'); %>

